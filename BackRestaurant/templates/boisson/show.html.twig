{% extends 'base.html.twig' %}

{% block title %}Boisson{% endblock %}

{% block body %}
    <h2 class="text-xl font-bold text-center m-4">Boisson</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ boisson.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ boisson.nom }}</td>
            </tr>
            <tr>
                <th>Appelation</th>
                <td>{{ boisson.appelation }}</td>
            </tr>
            <tr>
                <th>Annee</th>
                <td>{{ boisson.annee }}</td>
            </tr>
            <tr>
                <th>Composition</th>
                <td>{{ boisson.composition }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ boisson.volume }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ boisson.prix }}</td>
            </tr>
            <tr>
                <th>EstAlcolisee</th>
                <td>{{ boisson.estAlcolisee ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ boisson.disponible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_boisson_index') }}"><button  class="  w-auto bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md">Retour</button></a>

    <a href="{{ path('app_boisson_edit', {'id': boisson.id}) }}"><button class="btn w-20 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 ml-2 rounded-md m-2">editer</button></a>

    {{ include('boisson/_delete_form.html.twig') }}
{% endblock %}
