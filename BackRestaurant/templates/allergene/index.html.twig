{% extends 'base.html.twig' %}

{% block title %}Allergene index{% endblock %}

{% block body %}
    <h2 class="text-xl font-bold text-center m-4">Allergene index</h2>

    <table class="table min-w-full text-left text-sm whitespace-nowrap">
        <thead class="uppercase tracking-wider border-b-2 dark:border-neutral-600 bg-neutral-50 dark:bg-neutral-800">
            <tr>
                <th scope="col" class="px-6 py-4">Id</th>
                <th scope="col" class="px-6 py-4">Nom</th>
                <th scope="col" class="px-6 py-4">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for allergene in allergenes %}
            <tr class="border-b dark:border-neutral-600">
                <td scope="row" class="px-6 py-4">{{ allergene.id }}</td>
                <td scope="row" class="px-6 py-4">{{ allergene.nom }}</td>
                <td scope="row" class="px-6 py-4">
                    <a href="{{ path('app_allergene_show', {'id': allergene.id}) }}"><button class="btn w-20 bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-2 m-2 rounded-md">show</button></a>
                    <a href="{{ path('app_allergene_edit', {'id': allergene.id}) }}"><button class="btn w-20 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-2 m-2 rounded-md">editer</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_allergene_new') }}"><button  class="m-2  w-auto bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-md"> Creer un message</button></a>
    <a href="{{ path('aapp_admin_accueil') }}"><button  class="  w-auto bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md"> Retour</button></a>

{% endblock %}
