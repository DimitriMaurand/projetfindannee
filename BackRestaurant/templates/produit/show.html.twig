{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h2 class="text-xl font-bold text-center m-4">Produit</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Composition</th>
                <td>{{ produit.composition }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ produit.disponible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}"><button  class="  w-auto bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md">Retour</button></a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}"><button class="btn w-20 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 ml-2 rounded-md m-2">editer</button></a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
